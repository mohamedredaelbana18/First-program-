{
  "framework": "nextjs",
  "buildCommand": "npm run build && npx prisma generate",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  },
  "crons": [],
  "regions": ["iad1"],
  "env": {
    "NEXTAUTH_URL": {
      "description": "رابط التطبيق على Vercel - سيتم تعيينه تلقائياً",
      "value": "https://your-project-name.vercel.app"
    }
  }
}